<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.quyt.mqttchat.presentation.feature.home.message.detail.ConversationDetailViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".presentation.feature.home.message.detail.ConversationDetailFragment">

        <LinearLayout
            android:id="@+id/ll_action_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/purple_7e"
            android:gravity="center_vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="4dp"
                android:src="@drawable/baseline_arrow_back_ios_24"
                android:tint="@color/white" />

            <androidx.cardview.widget.CardView
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:cardCornerRadius="16dp">

                <androidx.appcompat.widget.AppCompatImageView
                    setAvatar="@{viewModel.MPartner.avatar}"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_launcher_background" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_name"
                    style="@style/NormalText"
                    android:text="@{viewModel.MPartner.fullname}"
                    android:textColor="@color/white"
                    android:fontFamily="@font/manrope_semi_bold"
                    tools:text="Thanh QuÃ½" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginEnd="4dp"
                        android:visibility="@{viewModel.MPartner.isOnline ? View.VISIBLE : View.GONE}"
                        app:cardBackgroundColor="#4CAF50"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/SmallText"
                        android:text="Active"
                        android:textColor="@color/white"
                        android:visibility="@{viewModel.MPartner.isOnline ? View.VISIBLE : View.GONE}" />

                    <androidx.appcompat.widget.AppCompatTextView
                        setTimeAgo="@{viewModel.MPartner.lastSeen}"
                        style="@style/SmallText"
                        android:textColor="@color/white"
                        android:visibility="@{viewModel.MPartner.isOnline ? View.GONE : View.VISIBLE}" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/ll_message_action"
            android:layout_below="@id/ll_action_bar">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_message_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="16dp"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:visibility="@{viewModel.messageEditorTitle != null ? View.VISIBLE : View.GONE}">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/normal_text" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_message_editor_type"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp"
                    android:src="@{viewModel.isEditing ? @drawable/ic_edit : @drawable/ic_reply}"
                    android:tint="@color/colorPrimary" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_editor_title"
                    style="@style/TitleText"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_toEndOf="@id/iv_message_editor_type"
                    android:text="@{viewModel.messageEditorTitle}"
                    tools:text="Sender" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_message_content"
                    style="@style/NormalText"
                    android:layout_below="@id/tv_editor_title"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@id/iv_message_editor_type"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@{viewModel.messageEditorContent}"
                    tools:text="This is a message" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_close_editor"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_close"
                    app:tint="@color/colorPrimary" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_message_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/cv_send"
                    android:background="@drawable/bg_message_type">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_attach"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/ic_attach"
                        android:tint="@color/purple_8b" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_message"
                        style="@style/NormalText"
                        android:textColor="@color/purple_66"
                        android:textColorHint="@color/purple_8b"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/iv_emoji"
                        android:layout_toEndOf="@id/iv_attach"
                        android:background="@color/transparent"
                        android:hint="Type your message..."
                        android:minHeight="44dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="0dp"
                        android:text="@={viewModel.messageInputValue}" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_emoji"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_smiley"
                        android:tint="@color/purple_8b" />
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_send"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/red_f8"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_send"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_send_stroke"/>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_emoji"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="16dp">
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vp_emoji"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/tl_emoji"/>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tl_emoji"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</layout>